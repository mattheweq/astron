---
import { type CollectionEntry } from "astro:content";
import {Image} from "astro:assets"

type Props = {
  post: CollectionEntry<'posts'>
}

const {post} = Astro.props
---

<article class="text-zinc-100 w-full">

<a href={`/astron/posts/${post.slug}`}>

  { !post.data.url ? (
    <img 
      src="/mvm-stamp.jpg"
      alt={post.data.title}
      class="rounded-2xl shadow-xl mb-4 aspect-thumbnail object-cover" 
    />
  ) : (
    <Image 
      src={post.data.url} 
      width={400} 
      height={600 / 1.5} 
      alt={post.data.title}
      class="rounded-2xl shadow-xl mb-4 aspect-thumbnail object-cover" 
    />
  )
  }

    <h2 class="text-2xl mb-2 text-center">{post.data.title}</h2>
</a>

<!-- <p class="text-xl line-clamp-2">
  {post.body}
</p> -->
</article>