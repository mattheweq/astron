---
import Nav from "../components/Nav.astro"
// import { ViewTransitions } from "astro:transitions";

interface Props {
	title: string;
  description?: string;
  image?: string;
	bgcol: string;
	txtcol: string;
}

const { title, description="Astron...", image="/imgs/logo.png", bgcol, txtcol } = Astro.props;
---

<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content={description} />
		<meta name="viewport" content="width=device-width" />
		<link rel='shortcut icon' href='https://easycss.github.io/favicon/favicon.png' type='image/x-icon' /> 
    <script defer src="https://cdn.jsdelivr.net/npm/chart.js"></script>
		<meta name="generator" content={Astro.generator} />
		<meta property="og:image" content={image} />
		<title>{title}</title>
    <!-- <ViewTransitions /> -->
	</head>
	<body class=`${bgcol}`>
    <Nav txtcol={txtcol} />
    <main>
      <slot />
    </main>
	</body>
</html>


<style is:global>

main{
  animation: .25s ease-out 0s 1 zoomIn;
}

@keyframes zoomIn {
  0% {
    opacity: 0;
    transform: scale(.9);
  }
  100% {
    transform: scale(1);
    opacity: 1;
  }
}

</style>
